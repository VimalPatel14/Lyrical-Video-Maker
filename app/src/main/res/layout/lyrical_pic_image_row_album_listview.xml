<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/llGridCell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rev_al"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/ivAlbumPhoto"
                android:layout_width="106dp"
                android:layout_height="96dp"
                android:contentDescription="@null"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/img_rightmark"
                android:layout_width="106dp"
                android:layout_height="95dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/title_list1"
                android:layout_width="96dp"
                android:layout_height="20dp"
                android:layout_below="@+id/ivAlbumPhoto"
                android:layout_centerHorizontal="true"
                android:maxLength="7"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:visibility="visible" />

            <TextView
                android:id="@+id/title_list"
                android:layout_width="96dp"
                android:layout_height="20dp"
                android:layout_below="@+id/ivAlbumPhoto"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:maxLength="13"
                android:singleLine="true"
                android:text="Listgdfgdfgdfgdfg"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/title_list_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:maxLength="7"
        android:singleLine="true"
        android:text="Listgdfgdfgdfgdfg"
        android:textColor="#000000"
        android:visibility="gone" />
</RelativeLayout>
